@model PAV_P1_Grupo02.Models.ViewModels.PersonasViewModel
@{
    ViewBag.Title = "Editar persona";
}

<h2>@ViewBag.Title</h2>

@*id_persona
    identificacion
    nombre_completo
    edad
    estado*@

@using (Html.BeginForm("Editar", "Personas", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d => d.Id) @*Oculta el campo id en la página*@

            @Html.LabelFor(d => d.Identificacion)
            @Html.TextBoxFor(d => d.Identificacion, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Identificacion, "", new { @class = "red" })

            @Html.LabelFor(d => d.NombreCompleto)
            @Html.TextBoxFor(d => d.NombreCompleto, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.NombreCompleto, "", new { @class = "red" })

            @Html.LabelFor(d => d.Edad)
            @Html.TextBoxFor(d => d.Edad, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Edad, "", new { @class = "red" })

            @Html.LabelFor(d => d.Estado)
            @Html.TextBoxFor(d => d.Estado, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Estado, "", new { @class = "red" })

            <div style="text-align:right">
                <input value="Guardar" class="btn btn-primary" type="submit" />
            </div>
        </div>
    </div>
}